generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User authentication and profile data

model User {
  id          String        @id @default(uuid())
  email       String        @unique
  password    String
  createdAt   DateTime      @default(now())
  assignments Assignment[]
  notes       Note[]

  @@map("users") // 🔁 mapped to renamed table
}

// Student assignments with deadlines and status tracking

model Assignment {
  id          String   @id @default(uuid())
  title       String
  description String?
  deadline    DateTime
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@map("assignments") // 🔁 mapped to renamed table
}

// Study notes and resources linked to users

model Note {
  id        String   @id @default(uuid())
  title     String
  content   String
  link      String?
  tag       String?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("notes") // 🔁 mapped to renamed table
}
